@page
@using HomeWork2.Services


@model HomeWork2.Pages.AnimalsModel
@{
    var animals = AnimalService.GetAnimals();
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-6">
            <h2 class="text-center mt-4 text-white">
                @HomeWork2.Resources.Resource.PageAnimals_TextHead
            </h2>
            <div class="card m-4">
                <ul class="list-group list-group-flush" style="background-color: #006666">
                    @foreach (var animal in animals)
                    {
                        <li class="list-group-item bg-info m-2">
                            <div class="d-flex justify-content-between">
                                <p class="mb-1 text-white">@animal.Name</p>
                                <a class="mb-1 text-white" asp-page="/AnimalDetails" asp-route-animalId="@animal.Id">
                                    @HomeWork2.Resources.Resource.PageAnimals_RefInfo
                                </a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

