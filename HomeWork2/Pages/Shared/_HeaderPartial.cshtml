@{
    string currentPage = Context.Request.Path.Value;
}

<header style="background-color: #009999">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Animals</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item @(currentPage == "/" ? "active" : "")">
                        <a class="nav-link text-white" asp-area="" asp-page="/Index">
                            @HomeWork2.Resources.Resource.Nav_Home
                        </a>
                    </li>
                    <li class="nav-item @(currentPage == "/Animals" ? "active" : "")">
                        <a class="nav-link text-white" asp-area="" asp-page="/Animals">
                            @HomeWork2.Resources.Resource.Nav_Animals
                        </a>
                    </li>
                    <li class="nav-item @(currentPage == "/AddAnimal" ? "active" : "")">
                        <a class="nav-link text-white" asp-area="" asp-page="/AddAnimal">
                            @HomeWork2.Resources.Resource.Nav_AddAnimal
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
